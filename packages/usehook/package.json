      "import": "./dist/index.mjs"
    }
  },
  "devDependencies": {
    "@types/react": "^18.0.30",
    "@types/react-dom": "^18.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "workspace:0.0.0",
    "tsup": "^6.7.0",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "engines": {
    "node": ">=16"
  }
}
