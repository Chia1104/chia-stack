{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chia-stack/usehook",
  "version": "0.0.1-beta.1",
  "private": true,
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.{ts,js,tsx,jsx}\" --fix",
    "type:check": "tsc --noEmit",
