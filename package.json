{
  "name": "chia-stack",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "type:check": "turbo run type:check",
    "clean": "find . -name node_modules -o -name .next -type d -prune | xargs rm -rf",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:e2e": "turbo run test:e2e",
    "e2e:chrome": "turbo run e2e:chrome",
    "e2e:firefox": "turbo run e2e:firefox",
    "e2e:edge": "turbo run e2e:edge"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.2.4",
    "@testing-library/react": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vitejs/plugin-react": "^3.0.1",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^0.0.10",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-tailwindcss": "3.10.1",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.6",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "shell-quote": "^1.8.0",
    "turbo": "1.8.5",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  },
  "engines": {
    "node": ">=16.*"
  },
  "packageManager": "pnpm@8.0.0"
}
