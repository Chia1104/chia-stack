{
  "$schema": "https://json.schemastore.org/package",
  "name": "chia-stack",
  "version": "2.0.0",
  "private": true,
  "sideEffects": false,
  "license": "MIT",
  "author": {
    "name": "Chia1104",
    "email": "yuyuchia7423@gmail.com",
    "url": "https://github.com/chia1104"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint --parallel",
    "format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "type:check": "turbo run type:check --parallel",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean --parallel",
    "test": "turbo run test --parallel",
    "test:watch": "turbo run test:watch --parallel",
    "test:e2e": "turbo run test:e2e",
    "next-sitemap": "turbo run next-sitemap --parallel"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.4.3",
    "@total-typescript/ts-reset": "0.4.2",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-next": "^13.4.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.9.9",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-tailwindcss": "3.12.0",
    "happy-dom": "^9.20.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "shell-quote": "^1.8.1",
    "ts-node": "^10.9.1",
    "turbo": "1.9.9",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  },
  "engines": {
    "node": ">=18.*"
  },
  "packageManager": "pnpm@8.4.0",
  "dependencies": {
    "superjson": "1.12.3",
    "zod": "^3.21.4"
  }
}
