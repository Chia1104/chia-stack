{
  "$schema": "https://json.schemastore.org/package",
  "name": "chia-stack",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start",
    "lint": "turbo run lint --parallel",
    "format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "type:check": "turbo run type:check --parallel",
    "test": "turbo run test --parallel",
    "test:watch": "turbo run test:watch --parallel",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean --parallel"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.3.0",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.9.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-tailwindcss": "3.11.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "shell-quote": "^1.8.1",
    "turbo": "1.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "engines": {
    "node": ">=18.*"
  },
  "packageManager": "pnpm@8.2.0",
  "dependencies": {
    "zod": "^3.21.4"
  }
}
